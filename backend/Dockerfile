FROM python:3.11-slim

RUN apt-get update && apt-get install -y gcc libffi-dev python3-dev libgl1 libglib2.0-0 libsm6 libxext6 libxrender-dev libgomp1

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]